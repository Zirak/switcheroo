{
    "name" : "Switcheroo",
    "description" : "Fuzzy-navigate between open tabs",
    "version" : "0.1.0",

    "browser_action": {
        "default_title": "Switcheroo",
        "default_popup": "src/popup/popup.html",

        "default_icon": {
            "19": "icons/icon19.png",
            "38": "icons/icon38.png"
        }
    },

    "commands" : {
        "_execute_browser_action" : {
            "suggested_key" : {
                "default"  : "Ctrl+Shift+K"
            },
            "description" : "Do the ol' switcheroo"
        }
    },

    "permissions" : ["tabs"],

    "icons": {
        "19": "icons/icon19.png",
        "38": "icons/icon38.png",
        "48": "icons/icon48.png"
    },

    "incognito": "split",

    "manifest_version" : 2
}
