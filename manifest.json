{
    "name" : "Switcheroo",
    "description" : "Fuzzy-navigate between open tabs",
    "version" : "0.0.3",

    "background" : {
        "scripts" : ["src/background.js"],
        "persistent" : false
    },

    "commands" : {
        "activate" : {
            "suggested_key" : {
                "default"  : "Ctrl+Shift+K"
            },
            "description" : "Do the ol' switcheroo"
        }
    },

    "permissions" : ["activeTab", "tabs"],
    "web_accessible_resources": [
        "src/content/style.css"
    ],

    "manifest_version" : 2
}
